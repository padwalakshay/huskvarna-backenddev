{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "types": ["jest", "node"],
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@services/*": ["src/services/*"],
        "@interfaces/*": ["src/interfaces/*"]
      }
    },
    "exclude": ["node_modules", "**/*.test.ts", "global.d.ts"]
  }